doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="stylesheet", type="text/css" href="css/style.css")
    link(rel="stylesheet", type="text/css" href="css/global.css")
  body
    div.main
      form(method="POST", action="/signup").signup-form
        h2 Sign up
        p.fullname
          input(type="text", name="firstname", placeholder="First name", required)
          input(type="text", name="lastname", placeholder="Last name", required)
        p
          input(type="email", name="email" placeholder="E-mail", required).full-width
        p
          input(type="password", name="password", placeholder="Password", minlength="8", required).full-width
          span.note At least 8 characters
        p
          input(type="text", name="phone", placeholder="Phone number").full-width
          span.note Optional
        p
          input(type="checkbox", name="subscribe" id="subscribe").cursor-pointer
          label(for="subscribe").cursor-pointer Subscribe to our newsletter
        p
          input(type="submit" value="SIGN UP").full-width.primary
        p.terms
          label By clicking Sign up you agree to our 
          a(href="javascript:void(0);") terms of service